---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '../components/Analytics.astro';
import PersonSchema from '../components/PersonSchema.astro';
import CustomCookieConsent from '../components/CustomCookieConsent.astro';

interface Props {
	title: string;
	page?: 'homepage' | 'businessfotografie' | 'architekturfotografie' | 'portraitfotografie' | 'kontakt' | 'daniel';
}

const { title, page = 'homepage' } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
		<meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description"
            content="Professionelle Fotografie fÃ¼r Menschen und Unternehmen in Berlin. Businessfotografie, Portraits und Architekturfotografie seit 1995." />
        <link rel="icon" href="../favicon.svg" type="image/svg+xml" />
        <CustomCookieConsent />
        <Analytics />
        <PersonSchema page={page} />
	</head>
	<body class="u-container stack" style="--space: var(--s2)">
        <Header />
		<main class="gap">
            <slot />
        </main>
        <Footer />
	</body>
</html>