---
// SEO meta tags - title, description, canonical URL
export interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  keywords?: string;
}

const { title, description, canonicalUrl, keywords } = Astro.props;
---

<title>{title}</title>
<meta name="description" content={description} />
{keywords && <meta name="keywords" content={keywords} />}
{canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
<meta name="generator" content={Astro.generator} />

<!-- Local SEO -->
<meta name="geo.region" content="DE-BE" />
<meta name="geo.placename" content="Berlin" />
<meta name="geo.position" content="52.520008;13.404954" />
<meta name="ICBM" content="52.520008, 13.404954" />

<!-- Language and locale -->
<meta name="language" content="de" />
<meta name="content-language" content="de-DE" />

<!-- Author -->
<meta name="author" content="Daniel Kause, SILBERBLICK" />
