---
// Google Analytics 4 tracking component
export interface Props {
  trackingId?: string;
}

const { trackingId } = Astro.props;

// Only load analytics in production and when tracking ID is provided
const isProduction = import.meta.env.PROD;
const shouldTrack = trackingId && isProduction;
---

{shouldTrack && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${trackingId}`}></script>
    <script define:vars={{ trackingId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', trackingId);
    </script>
  </>
)}