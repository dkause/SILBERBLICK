---
import { getCollection } from 'astro:content'
import GalleryLayout from '../../components/GalleryLayout.astro'

const title = 'Architekturfotografie Berlin - SILBERBLICK'
const description =
  'Professionelle Architekturfotografie in Berlin. Gebäude, Räume und urbane Landschaften von Daniel Kause.'
const keywords =
  'Architekturfotografie Berlin, Gebäudefotografie, Immobilienfotografie, Architekturfotograf Berlin, urbane Landschaften, Daniel Kause'

// Get all architekturfotografie photos
const architekturfotos = await getCollection('photos', ({ data }) => {
  return data.category === 'architekturfotografie'
})

// Import all architekturfotografie images
const images = import.meta.glob(
  '../../assets/images/architekturfotografie/*.jpg',
  { eager: true }
)
---

<GalleryLayout
  title={title}
  description={description}
  currentPath="/architekturfotografie/"
  pageTitle="Architekturfotografie"
  pageDescription="Gebäude, Räume und urbane Landschaften in Berlin."
  keywords={keywords}
  canonicalUrl="https://silberblick.berlin/architekturfotografie/"
/>
