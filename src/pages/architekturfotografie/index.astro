---
import { getCollection } from 'astro:content';
import GalleryLayout from '../../components/GalleryLayout.astro';
import PhotoGallery from '../../components/PhotoGallery.astro';

const title = "Architekturfotografie Berlin - SILBERBLICK";
const description = "Professionelle Architekturfotografie in Berlin. Geb채ude, R채ume und urbane Landschaften von Daniel Kause.";

// Get all architekturfotografie photos
const architekturfotos = await getCollection('photos', ({ data }) => {
  return data.category === 'architekturfotografie';
});

// Import all architekturfotografie images
const images = import.meta.glob('../../assets/images/architekturfotografie/*.jpg', { eager: true });
---

<GalleryLayout 
  title={title}
  description={description}
  currentPath="/architekturfotografie/"
  pageTitle="Architekturfotografie"
  pageDescription="Geb채ude, R채ume und urbane Landschaften in Berlin."
>
  <PhotoGallery 
    photos={architekturfotos} 
    category="architekturfotografie" 
    images={images} 
  />
</GalleryLayout>