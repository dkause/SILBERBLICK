---
import { getCollection } from 'astro:content';
import GalleryLayout from '../../components/GalleryLayout.astro';
import PhotoGallery from '../../components/PhotoGallery.astro';

const title = "Portraitfotografie Berlin - SILBERBLICK";
const description = "Authentische Portraitfotografie in Berlin. Natürliche Menschen-Portraits und Charakterstudien von Daniel Kause.";

// Get all portraitfotografie photos
const portraitfotos = await getCollection('photos', ({ data }) => {
  return data.category === 'portraitfotografie';
});

// Import all portraitfotografie images
const images = import.meta.glob('../../assets/images/portraitfotografie/*.jpg', { eager: true });
---

<GalleryLayout 
  title={title}
  description={description}
  currentPath="/portraitfotografie/"
  pageTitle="Portraitfotografie"
  pageDescription="Authentische Menschen-Portraits und natürliche Charakterstudien."
>
  <PhotoGallery 
    photos={portraitfotos} 
    category="portraitfotografie" 
    images={images} 
  />
</GalleryLayout>