---
import { getCollection } from 'astro:content';
import GalleryLayout from '../../components/GalleryLayout.astro';
import SeriesGallery from '../../components/SeriesGallery.astro';

const title = "Businessfotografie Berlin - SILBERBLICK";
const description = "Professionelle Businessfotografie in Berlin. Authentische Unternehmensportraits und Corporate Photography von Daniel Kause.";

// Get all business photos
const businessPhotos = await getCollection('photos', ({ data }) => {
  return data.category === 'businessfotografie';
});

// Import all business images
const images = import.meta.glob('../../assets/images/businessfotografie/*.jpg', { eager: true });
---

<GalleryLayout 
  title={title}
  description={description}
  currentPath="/businessfotografie/"
  pageTitle="Businessfotografie"
  pageDescription="Authentische Unternehmensportraits, die Ihre ProfessionalitÃ¤t unterstreichen."
>
  <SeriesGallery 
    photos={businessPhotos} 
    category="businessfotografie" 
    images={images} 
  />
</GalleryLayout>